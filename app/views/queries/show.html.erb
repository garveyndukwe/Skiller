
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span2">
        <div class="sidebar">
          <%= render "admin/main_admin_menu"%>
        </div>
      </div>
      <div class="span1">
      </div>
      <div class="span8">
        <table class="table table-striped table-condensed">
          <div class="module">
            <div class="module-head">
              <h3>Query Result : <%= @query.name%></h3>
              <div class="module-option clearfix">
                <div class="pull-right">
                  <%= link_to "Get Grpahics", '#',class:"btn btn-primary" %>
                </div>
              </div> <!-- clearfix-->

            </div>

            <div class="module-body table">
              <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                <thead>
                <tr>
                  <th>File no</th>
                  <th>Last name</th>
                  <th>First name</th>
                  <th>Middle name</th>
                  <th>Rank</th>
                  <th>Gender</th>
                  <th>Area specialize</th>
                  <th>Qualification</th>
                  <th>Station</th>
                  <th>Department</th>
                  <th colspan="3"></th>
                </tr>
                </thead>
                <tbody>
                <% @results.each do |q| %>
                    <% if (q.id) %2==0 %>
                        <tr class="even gradeX">

                          <td><%= q.file_no %></td>
                          <td><%= q.last_name %></td>
                          <td><%= q.first_name %></td>
                          <td><%= q.middle_name %></td>
                          <td><%= q.rank %></td>
                          <td><%= q.gender %></td>
                          <td><%= q.area_specialize %></td>
                          <td><%= q.qualification %></td>
                          <td><%= q.station %></td>
                          <td><%= q.department %></td>
                        </tr>
                    <% else %>

                        <tr class="odd gradeX">
                          <td><%= q.file_no %></td>
                          <td><%= q.last_name %></td>
                          <td><%= q.first_name %></td>
                          <td><%= q.middle_name %></td>
                          <td><%= q.rank %></td>
                          <td><%= q.gender %></td>
                          <td><%= q.area_specialize %></td>
                          <td><%= q.qualification %></td>
                          <td><%= q.station %></td>
                          <td><%= q.department %></td>
                        </tr>
                    <% end %>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </table>
      </div>

    </div>
  </div>
</div>



