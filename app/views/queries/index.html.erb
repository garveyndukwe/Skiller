
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span2">
        <div class="sidebar">
          <%= render "admin/main_admin_menu"%>
        </div>
      </div>
      <div class="span0">
      </div>
      <div class="span9">
        <table class="table table-striped table-condensed">
          <div class="module">
            <div class="module-head">
              <h2>Query Index</h2>
              <div class="module-option clearfix">
                <div class="pull-right">
                  <%= link_to "Add Query", new_query_path,class:"btn btn-primary" %>
                </div>
              </div> <!-- clearfix-->



            <div class="module-body table">
              <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                <thead>
                <tr>

                  <th>Name</th>
                  <th>Fields</th>
                  <th>Clause</th>
                  <th>Query</th>
                  <th>Count</th>
                  <th></th>
                  <th></th>

                  <th colspan="3"></th>
                </tr>
                </thead>
                <tbody>
                <% @queries.each do |q| %>
                    <% if (q.id) %2==0 %>
                        <tr class="even gradeX">

                          <td class="cell-title"><%=  link_to  q.name%></td>
                          <td class="cell-title"><%= q.fields %></td>
                          <td class="cell-title"><%= q.where_clause %></td>
                          <td class="cell-title"><%= q.query %></td>
                          <td class="cell-title"><%= q.count %></td>

                          <td><%= link_to 'Show', q %></td>
                          <td><%= link_to 'Edit', edit_query_path(q) %></td>
                          <td><%= link_to 'Destroy', q, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% else %>

                        <tr class="odd gradeX">
                          <td class="cell-title"><%=  link_to  q.name%></td>
                          <td class="cell-title"><%= q.fields %></td>
                          <td class="cell-title"><%= q.where_clause %></td>
                          <td class="cell-title"><%= q.query %></td>
                          <td class="cell-title"><%= q.count %></td>
                          <td><%= link_to 'Show', q %></td>
                          <td><%= link_to 'Edit', edit_query_path(q) %></td>
                          <td><%= link_to 'Destroy', q, method: :delete, data: { confirm: 'Are you sure?' } %></td>

                        </tr>
                    <% end %>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
          </div>
        </table>
      </div>

    </div>
  </div>
</div>