
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span2">
        <div class="sidebar">
          <%= render "admin/main_admin_menu"%>
        </div>
      </div>
      <div class="span0">
      </div>
      <div class="span8">
        <table class="table table-striped table-condensed">
          <div class="module">
            <div class="module-head">
              <h3>Station Index</h3>
              <div class="module-option clearfix">
                <div class="pull-right">
                  <%= link_to 'Add Department', new_set_department_path,class:"btn btn-primary" %>
                </div>
              </div> <!-- clearfix-->

            </div>

            <div class="module-body table">
              <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                <thead>
                <tr>
                  <th>Code</th>
                  <th>Name</th>
                  <th>Displayed</th>
                  <th></th>
                  <th></th>
                  <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>

                <% @set_departments.each do |set_department| %>
                    <% if (set_department.id) %2==0 %>
                        <tr class="even gradeX">
                          <td class="cell-title"><%= set_department.code %></td>
                          <td class="cell-title"><%= set_department.name %></td>
                          <td class="cell-title"><%= set_department.display %></td>
                          <td><%= link_to 'Show', set_department %></td>
                          <td><%= link_to 'Edit', edit_set_department_path(set_department) %></td>
                          <td><%= link_to 'Destroy', set_department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>

                    <% else %>

                        <tr class="odd gradeX">
                          <td class="cell-title"><%= set_department.code %></td>
                          <td class="cell-title"><%= set_department.name %></td>
                          <td class="cell-title"><%= set_department.display %></td>
                          <td><%= link_to 'Show', set_department %></td>
                          <td><%= link_to 'Edit', edit_set_department_path(set_department) %></td>
                          <td><%= link_to 'Destroy', set_department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% end %>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </table>
      </div>

    </div>
  </div>
</div>





