
      <div class="span1">
      </div>
      <div class="span10">
        <table class="table table-striped table-condensed">
          <div class="module">
            <div class="module-head">
              <h3>Profile: <%= @staff.last_name << ", " << @staff.first_name%></h3>
              <div class="module-option clearfix">

              </div> <!-- clearfix-->

            </div>

            <div class="module-body table">
              <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                <thead>
                <tr>

                  <th>File no</th>
                  <th>Last name</th>
                  <th>First name</th>
                  <th>Middle name</th>
                  <th>Rank</th>
                  <th>Gender</th>
                  <th>Area Specialize</th>
                  <th>Qualiftn</th>
                  <th>Station</th>
                  <th>Dept.</th>
                  <th>Section</th>
                  <th>Grade</th>
                  <th>Step</th>
                  <th>Submitted</th>
                  <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>
                <% staff = @staff %>
                <%# if (staff.id) %2==0 %>
                <tr class="even gradeX">

                  <td class="cell-title"><%= staff.file_no %></td>
                  <td class="cell-title"><%= staff.last_name %></td>
                  <td class="cell-title"><%= staff.first_name %></td>
                  <td class="cell-title"><%= staff.middle_name %></td>
                  <td class="cell-title"><%= staff.rank %></td>
                  <td class="cell-title"><%= staff.gender %></td>
                  <td class="cell-title"><%= staff.area_specialize %></td>
                  <td class="cell-title"><%= staff.qualification %></td>
                  <td class="cell-title"><%= staff.station %></td>
                  <td class="cell-title"><%= staff.department %></td>
                  <td class="cell-title"><%= staff.section %></td>
                  <td class="cell-title"><%= staff.grade %></td>
                  <td class="cell-title"><%= staff.step %></td>
                  <td class="cell-title"><%= staff.submitted %></td>
                </tr>

                </tbody>
              </table>
            </div>



              <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                <thead>
                <tr>

                  <th>Oral Score</th>
                  <th>Written Score</th>
                  <th>Analytical Score</th>
                  <th>Computing Score</th>
                  <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>
                  <% @staff.skills.each do |s|%>
                      <%# if (staff.id) %2==0 %>
                      <tr class="odd gradeX">

                        <td class="cell-title"><%= s.oral_score %></td>
                        <td class="cell-title"><%= s.written_score %></td>
                        <td class="cell-title"><%= s.analytic_score %></td>
                        <td class="cell-title"><%= s.computing_score %></td>
                      </tr>
                <% end %>
                </tbody>
              </table>

          </div>
        </table>
      </div>

