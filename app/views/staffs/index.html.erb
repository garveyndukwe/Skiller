
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="span2">
        <div class="sidebar">
          <%= render "admin/main_admin_menu"%>
        </div>
      </div>
      <div class="span0">
      </div>
      <div class="span9">
        <table class="table table-striped table-condensed">
          <div class="module">
            <div class="module-head">
              <h3>Staff Index</h3>
              <div class="module-option clearfix">
                <div class="pull-right">
                  <%= link_to "Export to file", '#',class:"btn btn-primary" %>
                </div>
              </div> <!-- clearfix-->

            </div>

            <div class="module-body table">
              <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
                <thead>
                <tr>

                  <th>File no</th>
                  <th>Last name</th>
                  <th>First name</th>
                  <th>Middle name</th>
                  <th>Rank</th>
                  <th>Gender</th>

                  <th>Qualiftn</th>
                  <th>Station</th>
                  <th>Dept.</th>
                  <th>Section</th>
                  <th>Grade</th>
                  <th>Step</th>
                  <th>Locked</th>
                  <th></th>
                  <th></th>
                  <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>
                <% @staffs.each do |staff| %>
                    <% if (staff.id) %2==0 %>
                        <tr class="even gradeX">
                        <tr>
                          <td class="cell-title"><%= staff.file_no %></td>
                          <td class="cell-title"><%= staff.last_name %></td>
                          <td class="cell-title"><%= staff.first_name %></td>
                          <td class="cell-title"><%= staff.middle_name %></td>
                          <td class="cell-title"><%= staff.rank %></td>
                          <td class="cell-title"><%= staff.gender %></td>

                          <td class="cell-title"><%= staff.qualification %></td>
                          <td class="cell-title"><%= staff.station %></td>
                          <td class="cell-title"><%= staff.department %></td>
                          <td class="cell-title"><%= staff.section %></td>
                          <td class="cell-title"><%= staff.grade %></td>
                          <td class="cell-title"><%= staff.step %></td>
                          <td class="cell-check"><%= staff.submitted %></td>
                          <td><%= content_tag(:a, href: disply_user_staff_path(staff), class: "icon-eye-open") do -%>
                            <% end -%>
                          </td>
                          <td><%#= link_to 'Display', [:display,staff] %></td>
                          <td><%= link_to 'Delete', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                    <% else %>

                        <tr class="odd gradeX">
                          <td class="cell-title"><%= staff.file_no %></td>
                          <td class="cell-title"><%= staff.last_name %></td>
                          <td class="cell-title"><%= staff.first_name %></td>
                          <td class="cell-title"><%= staff.middle_name %></td>
                          <td class="cell-title"><%= staff.rank %></td>
                          <td class="cell-title"><%= staff.gender %></td>

                          <td class="cell-title"><%= staff.qualification %></td>
                          <td class="cell-title"><%= staff.station %></td>
                          <td class="cell-title"><%= staff.department %></td>
                          <td class="cell-title"><%= staff.section %></td>
                          <td class="cell-title"><%= staff.grade %></td>
                          <td class="cell-title"><%= staff.step %></td>
                          <td class="cell-title"><%= staff.submitted %></td>
                          <td><%= link_to 'Display', [:display, staff] %></td>
                          <td><%= link_to 'Delete', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>

                    <% end %>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </table>
      </div>

    </div>
  </div>
</div>