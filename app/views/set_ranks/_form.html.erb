<div class="span6">
  <div class="content">

    <div class="module">
      <div class="module-head">
        <h2>
          <%= "Set Rank" %>

        </h2>
      </div>


      <div class="module-body ">

        <%= form_for(@set_rank) do |f| %>
            <% if @set_rank.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@set_rank.errors.count, "error") %> prohibited this set_rank from being saved:</h2>

                  <ul>
                    <% @set_rank.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <div class="field">
              <%= f.label :code %><br>
              <%= f.text_field :code %>
            </div>
            <div class="field">
              <%= f.label :name %><br>
              <%= f.text_field :name %>
            </div>
            <div class="field">
              <%= f.label :display %><br>
              <%= f.text_field :display %>
            </div>
            <div class="module-option clearfix">

              <div class="pull-right">

                <% if @set_rank.new_record? %>

                    <%= button_to "Create Rank", {action: "create"}, class: "btn btn-primary" %>
                <% elsif @set_rank.persisted? %>

                    <%= button_to "Update Rank", {action: "update"}, class: "btn btn-primary" %>


                <% end %>

              </div>
            </div> <!-- clearfix-->
            </div>
        <% end %>
        </div>
  </div>
</div>